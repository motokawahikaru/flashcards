<div class="container">
  <div class="row">
    <div class="text-left col-sm-6">
      <%= @card.deck.name %>
    </div>
    <div class="text-right col-sm-6">
      <%= @q_num %>問目/<%= @count_questions %>問
    </div>
  </div>
</div>
<div class="text-center">
  <h3>問題</h3>
</div>
<div class="text-center">
  <h2><%= @card.question %></h2>
</div>
<div class="text-center">
  <h3>解答</h3>
</div>
<div class="text-center">
  <h2><%= @card.answer %></h2>
</div>
<div class="btn-group d-flex">
  <%= link_to "正解", url_for(action: :correct_count, id: params[:id], correct: true), method: :post, class: "btn btn-success w-100" %>
  <%= link_to "不正解", url_for(action: :correct_count, id: params[:id]), method: :post, class: "btn btn-danger w-100" %>
</div>