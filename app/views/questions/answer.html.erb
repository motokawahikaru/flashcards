<div class="container">
  <div class="row">
    <div class="text-left col-sm-6">
      <%= @deck.name %>
    </div>
    <!-- <div class="text-right col-sm-6">
      <%= @q_num %>問目/<%= @count_cards %>問
    </div> -->
  </div>
</div>
<div class="text-center">
  <h3>問題</h3>
</div>
<div class="text-center">
  <h2><%= @card.question %></h2>
</div>
<div class="text-center">
  <h3>解答</h3>
</div>
<div class="text-center">
  <h2><%= @card.answer %></h2>
</div>
<div class="text-center">
  <% next_id = params[:id].to_i + 1 %>
  <% if Question.find_by(id: next_id) == nil %>
    <%= link_to "終了", deck_questions_path, class: "btn btn-primary", method: :delete %>
  <% else %>
    <%= link_to "次の問題", url_for(action: :show, id: next_id), class: "btn btn-outline-primary" %>
  <% end %>
</div>